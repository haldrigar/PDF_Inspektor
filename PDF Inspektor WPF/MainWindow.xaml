<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pdfViewer="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF" 
        x:Class="PDF_Inspektor.MainWindow"
        mc:Ignorable="d"

        Title="GISNET PDF Inspektor" 
        Height="600" 
        Width="1200" 
        Loaded="Window_Loaded" 
        Closed="Window_Closed">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="300*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Podgląd pliku" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3">

            <pdfViewer:PdfViewerControl x:Name="PdfViewer" 
                                        DocumentLoaded="PdfViewer_DocumentLoaded" 
                                        CursorMode="HandTool" 
                                        EnableLayers="False" 
                                        EnableRedactionTool="False" 
                                        EnableNotificationBar="False" 
                                        IsBookmarkEnabled="False" 
                                        IsTextSearchEnabled="False" 
                                        IsTextSelectionEnabled="False" 
                                        ShowHorizontalScrollBar="False" 
                                        ShowScrollbar="False" 
                                        ShowVerticalScrollBar="False" 
                                        IsManipulationEnabled="False"
                                        ZoomMode="FitPage" 
                                        Background="White">
            </pdfViewer:PdfViewerControl>

        </GroupBox>

        <GroupBox Grid.Row="0" Grid.Column="1" Header="Lista plików" >
            <ListBox x:Name="ListBoxFiles" 
                     AllowDrop="True" 
                     DragOver="ListBoxFiles_DragOver" 
                     Drop="ListBoxFiles_Drop" 
                     SelectionChanged="ListBoxFiles_SelectionChanged" KeyDown="ListBoxFiles_KeyDown"/>
        </GroupBox>

        <GroupBox Grid.Row="1" Grid.Column="1" Header="Opcje" />

        <GroupBox Grid.Row="2" Grid.Column="1" Header="Operacje" >

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="ButtonRotate" 
                        Content="Obrót" 
                        Width="100" 
                        Height="25" 
                        Grid.Column="0"
                        ToolTip="LEWY PRZYCISK - zgodnie ze wskazówkami zegara, PRAWY PRZYCISK - przeciwnie do wskazówek zegara"
                        Click="ButtonRotate_OnClick"
                        MouseRightButtonDown="ButtonRotate_OnClick" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"/>
                
                <Button x:Name="ButtonEdit" 
                        Content="Edycja" 
                        Width="100"
                        Height="25"
                        Grid.Column="1" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Click="ButtonEdit_Click"/>

            </Grid>




        </GroupBox>


        <StatusBar Grid.Row="3" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="2" >

            <StatusBarItem x:Name="StatusBarItemMain" 
                           Content="Gotowy!" />

        </StatusBar>


    </Grid>
</Window>
