<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pdfViewer="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF" 
        x:Class="PDF_Inspektor.MainWindow"
        mc:Ignorable="d"

        Title="GISNET PDF Inspektor" 
        Height="600" 
        Width="1200" 
        Loaded="Window_Loaded"
        Closed="Window_Closed" SizeChanged="Window_SizeChanged">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="300*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Header="Podgląd pliku">

            <pdfViewer:PdfViewerControl 
                x:Name="PdfViewer" 
                ZoomMode="FitPage" 
                ShowScrollbar="False" 
                EnableNotificationBar="False" 
                CursorMode="HandTool" 
                EnableLayers="False" 
                EnableRedactionTool="False" 
                IsBookmarkEnabled="False" 
                IsTextSearchEnabled="False" 
                ShowHorizontalScrollBar="False" 
                ShowVerticalScrollBar="False"
                DocumentLoaded="PdfViewer_DocumentLoaded" IsTextSelectionEnabled="False" MaximumZoomPercentage="800" MinimumZoomPercentage="56">
                
                <pdfViewer:PdfViewerControl.ToolbarSettings>
                    
                    <pdfViewer:PdfViewerToolbarSettings 
                        ShowAnnotationTools="False" 
                        ShowFileTools="False" 
                        ShowPageNavigationTools="False"/>
                
                </pdfViewer:PdfViewerControl.ToolbarSettings>
                
            </pdfViewer:PdfViewerControl>

        </GroupBox>

        <GroupBox Grid.Row="0" Grid.Column="1" Header="Lista plików" >

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <ListBox 
                    x:Name="ListBoxFiles"
                    Grid.Row="1"
                    Grid.Column="0"
                    AllowDrop="True"
                    ItemsSource="{Binding PdfFiles}"
                    DisplayMemberPath="FileName"
                    SelectedItem="{Binding SelectedPdfFile, Mode=TwoWay}"
                    SelectionChanged="ListBoxFiles_SelectionChanged"
                    DragOver="ListBoxFiles_DragOver"
                    Drop="ListBoxFiles_Drop"
                    KeyDown="ListBoxFiles_KeyDown" />

                <TextBox 
                    x:Name="TextBoxDirectory" 
                    Grid.Row="0" 
                    Grid.Column="0"
                    IsEnabled="False" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="10,10,10,10" Background="#FFF1F9A5"/>

            </Grid>
            

        </GroupBox>

        <GroupBox Grid.Row="1" Grid.Column="1" Header="Opcje" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="ButtonMonitorDirectory" Content="Wybierz katalog" d:LayoutOverrides="Width" Margin="5,5,5,5" Click="ButtonMonitorDirectory_Click" Background="#FFF1F9A5"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2" Grid.Column="1" Header="Operacje" >

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <Button 
                    x:Name="ButtonEditIrfanView" 
                    Content="IrfanView"
                    Grid.Row="0" 
                    Grid.Column="0" 
                    ToolTip="Otwórz plik w IrfanView"
                    Margin="5,5,5,5"
                    Click="ButtonEditIrfanView_Click" Background="#FFA5B6E0"/>
                
                <Button 
                    x:Name="ButtonRotate" 
                    Content="Obrót" 
                    Grid.Row="0" 
                    Grid.Column="1"
                    ToolTip="LEWY PRZYCISK - zgodnie ze wskazówkami zegara, PRAWY PRZYCISK - przeciwnie do wskazówek zegara"
                    Click="ButtonRotate_OnClick"
                    Margin="5,5,5,5"
                    MouseRightButtonDown="ButtonRotate_OnClick" Background="#FFC6ECBE"/>

                <Button 
                    x:Name="ButtonDelete" 
                    Content="Kasuj plik"
                    Grid.Row="0" 
                    Grid.Column="2"  
                    ToolTip="Usuń plik z dysku"
                    Margin="5,5,5,5"
                    Click="ButtonDelete_Click" Background="#FFEF9A9A"/>

                <Button 
                    x:Name="ButtonEditGimp" 
                    Content="GIMP"
                    Grid.Row="1" 
                    Grid.Column="0" 
                    ToolTip="Otwórz plik w IrfanView"
                    Margin="5,5,5,5"
                    Click="ButtonEditGimp_Click" Background="#FFA5B6E0"/>

            </Grid>

        </GroupBox>


        <StatusBar Grid.Row="3" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="2" >

            <StatusBarItem x:Name="StatusBarItemMain" 
                           Content="Gotowy!" />

        </StatusBar>


    </Grid>
</Window>
