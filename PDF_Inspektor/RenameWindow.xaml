<Window x:Class="PDF_Inspektor.RenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zmień nazwę pliku" Height="150" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Wprowadź nową nazwę pliku:" Grid.Row="0"/>

        <TextBox x:Name="FileNameTextBox" Grid.Row="1" VerticalAlignment="Center" KeyDown="FileNameTextBox_KeyDown"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="OkButton" Content="OK" Width="75" IsDefault="True" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Anuluj" Width="75" Margin="5,0,0,0" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>